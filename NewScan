   function openQrCode() {
            dd.biz.util.scan({
            type: 'barCode',type:'qrCode',
	    //type为qrCode或者barCode
            onSuccess: function(data) {
            //onSuccess将在扫码成功之后回调 
	     	/* data结构
        		{ 'text': String}
     		 */
		 
               alert(data)
            },
           onFail : function(err) {
           }
        });
      }

    </script>
