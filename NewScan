dd.ready(function(res){
          logger.i('ready');
          dd.biz.util.scan({
            type: 'barCode',type:'qrCode',
	    //type为qrCode或者barCode
            onSuccess: function(data) {
            //onSuccess将在扫码成功之后回调 
	     	/* data结构
        		{'text': String} 
     		 */
		
               alert(JSON.stringify(data))
            },
           onFail : function(err) {
           }
        });
      });
      dd.error(function(error) {
          alert(error.errorCode);
          alert(JSON.stringify(error));
          logger.i('ready');
      });


   function openQrCode() {
            dd.biz.util.scan({
            type: 'barCode',
	    //type为qrCode或者barCode
            onSuccess: function(data) {
            //onSuccess将在扫码成功之后回调 
	     	/* data结构
        		{'text': String} 
     		 */
		
               alert(JSON.stringify(data))
            },
           onFail : function(err) {
           }
        });
      }

